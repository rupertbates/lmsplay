# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.ApplicationController.index
GET     /matches                  controllers.ApplicationController.matches

# Authentication
GET     /callback                           controllers.ApplicationController.facebookAuthCallback
#GET     /login                              controllers.ApplicationController.login
#POST    /login                              controllers.ApplicationController.authenticate
GET     /logout                             controllers.ApplicationController.logout

#logged in user

#Games
GET     /games      controllers.GamesController.index
GET     /games/new  controllers.GamesController.newGame
POST    /games      controllers.GamesController.createGame
GET     /games/:id  controllers.GamesController.getGame(id : Int)
PUT     /games/:id  controllers.GamesController.updateGame(id : Int)
DELETE  /games/:id  controllers.GamesController.deleteGame(id : Int)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
